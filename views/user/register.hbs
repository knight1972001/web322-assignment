<header id="header" class="masthead" style="background-image:url('../images/bakery.jpg');">
        <div class="container">
            <div class="intro-text">
                <div class="intro-lead-in"><span>Welcome To Bakery</span></div>
                <div class="intro-heading text-uppercase"><span>It's Nice To Meet You</span></div>
    </div>
</header>

<div class="container" style="margin-top: 50px">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs justify-content-center">
            <li class="nav-item">
            <a class="nav-link" style="font-size: 20px" href="/user/login">Login</a>
            </li>
            <li class="nav-item">
            <a class="nav-link active" style="font-size: 20px" href="/user/register">Register</a>
            </li>
        </ul>
</div>

<div class="holder">
    <form method="POST" action="/user/register">
        <h3>Sign Up</h3>
        <p>Create your account by entering your email address and choosing a password!</p>
        <input type="text" name="firstName" placeholder="First Name" value={{values.firstName}}>
        <br>
        {{#if validationResults.firstName}}
        <span style="color: red;">{{ validationResults.firstName }}</span><br>
        {{/if}}
        <input type="text" name="lastName" placeholder="Last Name" value={{values.lastName}}>
        <br>
        {{#if validationResults.firstName}}
        <span style="color: red;">{{ validationResults.firstName }}</span><br>
        {{/if}}
        <input type="text" name="email" placeholder="Email address" value={{values.email}}>
        <br>
        {{#if validationResults.email}}
        <span style="color: red;">{{ validationResults.email }}</span><br>
        {{/if}}
        <input type="password" name="password" placeholder="Password">
        <br>
        {{#if validationResults.password}}
        <span style="color: red;">{{ validationResults.password }}</span><br>
        {{/if}}
        <div class="row">
            <div class="col-md-inline">
                <input type="radio" name="isAdmin" value="admin">
                <lable for="admin">I am Admin</lable>
            </div>
            <div class="col-md-inline">
                <input type="radio" name="isAdmin" value="client">
                <lable for="admin">I am Customer</lable>
            </div>
        </div>
        <br>
        {{#if validationResults.radio}}
        <span style="color: red;">{{ validationResults.radio }}</span><br>
        {{/if}}
        <button type="submit" value="Add User">Register</button>
    </form>
</div>