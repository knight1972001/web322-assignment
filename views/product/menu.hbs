    <header id="header" class="masthead" style="background-image:url('../../images/bakery.jpg');">
        <div class="container">
            <div class="intro-text">
                <div class="intro-lead-in"><span>Welcome To Bakery</span></div>
                <div class="intro-heading text-uppercase"><span>It's Nice To Meet You</span></div
                ><a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger" role="button" href="#container">Get Started</a></div>
        </div>
    </header>

    {{#if error}}
        <div class="alert alert-danger" style="text-align: center;">
            <strong>Sorry!</strong> You must login to add the item to your cart!
        </div>  
    {{/if}}

    <div id="container" class="container" style="margin-top: 50px">
            <div class="row text-center" >
                {{#each allProduct}}
                    <div class="col-md-4" style="margin-top: 50px">
                        <img id="contentImg" src="../uploads/{{productImg}}">
                        <h4 class="section-heading">{{title}}</h4>
                        <p class="text-muted">{{description}}</p>
                        <p id="add-to-cart" class="btn btn-primary" style="position:absolute;right:5px;bottom:-20px;margin:0px;padding:10px 23px;" onclick="window.location.href='/add-to-cart/{{_id}}'">
                            <span>${{price}}</span>
                        </p>
                    </div>
                {{/each}}
            </div>
        </div>