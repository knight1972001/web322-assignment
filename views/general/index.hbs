    
    
    <header id="header" class="masthead" style="background-image:url('images/bakery.jpg');">
        <div class="container">
            <div class="intro-text">
                {{#if values.firstName}}
                <div class="intro-heading text-uppercase"><span style="color: #212529">Welcome {{values.firstName}}</span></div><a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger" role="button" href="#hero">Get Started</a></div>
                {{else}}
                <div class="intro-lead-in"><span>Welcome To Bakery</span></div>
                <div class="intro-heading text-uppercase"><span>It's Nice To Meet You</span></div><a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger" role="button" href="#hero">Get Started</a></div>
                {{/if}}
        </div>
    </header>
    
    <section id="hero">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="text-uppercase section-heading">Inside our Bakery</h2>
                    <h3 class="text-muted section-subheading">What makes us unique?</h3>
                </div>
            </div>
            <div class="row text-center">
                {{#each hero}}
                <div class="col-md-4">
                    <img id="contentImg" src={{img}}>
                    <h4 class="section-heading">{{title}}</h4>
                    <p class="text-muted">{{des}}</p>
                </div>
                {{/each}}
            </div>
        </div>
    </section>

    <div class="container">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs justify-content-center">
                <li class="nav-item">
                <a class="nav-link active" style="font-size: 20px" href="#cakes">Cake</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" style="font-size: 20px" href="#pizza">Pizza</a>
                </li>
            </ul>

                        <!-- Tab panes -->
        <div class="tab-content">
            <div id="cakes" class="container tab-pane active"><br>
                <div class="row text-center">
                {{#each cake}}
                    <div class="col-md-4">
                        <img id="contentImg" src={{img}}>
                        <h4 class="section-heading">{{title}}</h4>
                        <p class="text-muted">{{des}}</p>
                        <p class="btn btn-primary" style="position:absolute;bottom:-20px;right:5px;margin:0px;padding:10px 23px;">{{price}}</p>
                    </div>
                {{/each}}
                </div>
            </div>
            <div id="pizza" class="container tab-pane fade"><br>
                <div class="row text-center">
                {{#each pizza}}
                    <div class="col-md-4">
                        <img id="contentImg" src={{img}}>
                        <h4 class="section-heading">{{title}}</h4>
                        <p class="text-muted">{{des}}</p>
                        <p class="btn btn-primary" style="position:absolute;bottom:-20px;right:5px;margin:0px;padding:10px 23px;">{{price}}</p>
                    </div>
                {{/each}}
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function(){
            $(".nav-tabs a").click(function(){
                $(this).tab('show');
            });
        });
    </script>